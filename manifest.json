{
  "manifest_version":2,
  "name":"Stellar Power Tools",
  "short_name": "Stellar Power Tools",
  "description":"Show current price of Stellar (XLM) as badge on browser.  right click to send selected text to stellar blockchain explorer",
  "options_page": "options.html",
  "version":"1.0",
  "background":{
    "page":"background.html"
  },
  "browser_action":{
    "default_icon":"icons/icon.png"
  },
  "icons":{
    "128":"icons/icon.png"
  },
  "web_accessible_resources":[
    "icons/icon.png"
  ],

  "permissions":[
    "background",
      "storage",
      "contextMenus", 
      "tabs",
      "https://min-api.cryptocompare.com/"
  ]
}
